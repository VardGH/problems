#include <iostream>
#include <vector>
#include <math.h>

using namespace std;


double f(double n,double m) 
{
	return (n > m) ? n : m;
}

double _sum(vector<double> vec, double(*foo)(double,double))
{
	double sum = 0;

	for (int i = 0; i < vec.size()-2; ++i) {
		
		sum += foo(pow(vec[i], i + 1), pow(-1, i)/vec[i+1]);

	}

	return sum;
}

int main()
{
	vector<double> myvecor{ -0.5,1.5,3,4 };

	cout<<_sum(myvecor,f);

	return 0;
}
